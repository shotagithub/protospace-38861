
<div class="card">
  <%= link_to (image_tag prototype.image), prototype_path(prototype.id), class: :card__img %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype.id), method: :get , class: :card__title%>
    <p class="card__summary">
      <%= link_to prototype.catch_copy, prototype_path(prototype.id), method: :get %>
    </p>
    <%= link_to prototype.user.name,  ("/users/#{prototype.user_id}"), class: :card__user %>
  </div>
</div>
